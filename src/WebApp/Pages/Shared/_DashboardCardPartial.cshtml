@using SWGW.WebApp.Pages.Shared.DisplayTemplates
@model SWGW.WebApp.Pages.Staff.DashboardIndexModel.DashboardCard

<div class="card mt-4">
    <div class="card-header">
        <h2 id="@Model.CardId" class="h5">@Model.Title</h2>
    </div>
    <div class="card-body">

        @if (Model.Permits.Count == 0)
        {
            <p>
                <em>None.</em>
            </p>
        }
        else
        {
            <div class="table-responsive-md">
                <table class="table table-borderless table-hover" aria-describedby="@Model.CardId">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Received</th>
                        <th scope="col">Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var permit in Model.Permits)
                    {
                        <tr>
                            <th scope="row">
                                    <a asp-page="Permits/Details" asp-route-id="@permit.Id.ToString()" class="btn btn-outline-primary btn-sm">@permit.Id.ToString()</a>
                            </th>
                                <td class="text-nowrap">@Html.DisplayFor(_ => permit.ReceivedDate, DisplayTemplate.ShortDate)</td>
                                <td>@Html.DisplayFor(_ => permit.Status)</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
